<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item android:state_enabled="false" android:drawable="@drawable/btn_bg_disable" />
    
    <!-- Pressed -->
    <item android:state_pressed="true" android:state_enabled="true" android:drawable="@drawable/btn_subsub_bg_press" />
    
    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/btn_subsub_bg" />
    
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/btn_subsub_bg" />
</selector>