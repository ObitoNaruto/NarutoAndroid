<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/h5_font_blank"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/h5_font_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h5_tool_bar_height"
        android:background="@drawable/h5_bottom_bg"
        android:baselineAligned="false" >

        <FrameLayout
            android:id="@+id/h5_font_size1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_font_size1"
                android:layout_width="@dimen/h5_tool_bar_icon"
                android:layout_height="fill_parent"
                android:clickable="false"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/font_size1_selector"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/h5_font_size2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_font_size2"
                android:layout_width="@dimen/h5_tool_bar_icon"
                android:layout_height="@dimen/h5_tool_bar_icon"
                android:clickable="false"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/font_size2_selector"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/h5_font_size3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_font_size3"
                android:layout_width="@dimen/h5_tool_bar_icon"
                android:layout_height="@dimen/h5_tool_bar_icon"
                android:clickable="false"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/font_size3_selector"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/h5_font_size4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_font_size4"
                android:layout_width="@dimen/h5_tool_bar_icon"
                android:layout_height="@dimen/h5_tool_bar_icon"
                android:clickable="false"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/font_size4_selector"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/h5_font_close"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h5_tool_bar_icon"
            android:layout_gravity="center"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/iv_font_close"
                android:layout_width="@dimen/h5_tool_bar_icon"
                android:layout_height="@dimen/h5_tool_bar_icon"
                android:clickable="false"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/font_close_selector"
                tools:ignore="ContentDescription" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>