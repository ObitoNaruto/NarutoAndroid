<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.naruto.mobile.h5container">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:name="com.naruto.mobile.base.serviceaop.NarutoApplication"
        android:allowBackup="true" android:icon="@mipmap/ic_launcher" android:label="@string/app_name"
                 android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name="com.naruto.mobile.h5container.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.naruto.mobile.h5container.HomeActivity"
            android:hardwareAccelerated="false"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.naruto.mobile.h5container.ui.H5Activity"
            android:screenOrientation="portrait"
        />
        <activity android:name="com.naruto.mobile.h5container.ui.H5Multiple"
                  android:screenOrientation="portrait"  />
    </application>

</manifest>